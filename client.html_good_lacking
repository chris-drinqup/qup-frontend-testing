    <script>
        // Configuration
        const API_BASE = 'https://qupcore-supercode-692478335867.us-central1.run.app';
        const SUPABASE_URL = 'https://eorhgophbjjbiguvkygo.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImVvcmhnb3BoYmpqYmlndXZreWdvIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDg4MjMyMjUsImV4cCI6MjA2NDM5OTIyNX0.fV_6TFXfjDVusTeknF_LAGjxw7BfTZtoQ0helbm5mwo';

        // Global state
        let socket = null;
        let currentUser = null;
        let currentOrder = null; // This will be the ORDER ID
        let currentOrderData = null;
        let developerKey = null;
        let waitTimeInterval = null;
        let estimatedCompletionTime = null;
        let orderStatusInterval = null;
        let queueMode = 'super_qup';
        let queueConfig = {};
        let supabase = null;

        // Initialize Supabase
        function initializeSupabase() {
            try {
                if (!SUPABASE_URL || SUPABASE_URL === 'YOUR_SUPABASE_URL' ||
                    !SUPABASE_ANON_KEY || SUPABASE_ANON_KEY === 'YOUR_SUPABASE_ANON_KEY') {
                    console.error('Supabase configuration missing. Please update SUPABASE_URL and SUPABASE_ANON_KEY');
                    showAlert('Supabase configuration missing. Please contact administrator.', 'error');
                    return false;
                }

                // Check if Supabase library is loaded
                if (typeof window.supabase === 'undefined') {
                    throw new Error('Supabase library not loaded. Please check the CDN or network connection.');
                }

                supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
                console.log('Supabase client initialized');
                return true;
            } catch (error) {
                console.error('Supabase initialization failed:', error);
                showAlert('Failed to initialize authentication system.', 'error');
                return false;
            }
        }

        // Initialize app
        async function init() {
            console.log('QUP Client initializing...');

            // Initialize Supabase first
            if (!initializeSupabase()) {
                showLogin();
                return;
            }

            // Check if user is already logged in
            try {
                const { data: { user } } = await supabase.auth.getUser();
                if (user) {
                    showApp(user);
                } else {
                    showLogin();
                }
            } catch (error) {
                console.error('Failed to check user session:', error);
                showLogin();
            }
        }

        // Authentication functions
        async function handleLogin() {
            if (!supabase) {
                showAlert('Authentication system not ready. Please refresh the page.', 'error');
                return;
            }

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();

            if (!email || !password) {
                showAlert('Please enter both email and password', 'error');
                return;
            }

            setLoading('login', true);
            hideElement('loginError');

            try {
                const { data, error } = await supabase.auth.signInWithPassword({
                    email: email,
                    password: password
                });

                if (error) {
                    throw error;
                }

                console.log('Supabase login successful');
                showApp(data.user);

            } catch (error) {
                console.error('Login failed:', error);
                showElement('loginError');
                showAlert('Login failed: ' + error.message, 'error');
            } finally {
                setLoading('login', false);
            }
        }

        async function logout() {
            if (!supabase) return;

            try {
                await supabase.auth.signOut();
                console.log('Logged out');

                // Cleanup
                if (socket) {
                    socket.disconnect();
                    socket = null;
                }
                if (waitTimeInterval) {
                    clearInterval(waitTimeInterval);
                    waitTimeInterval = null;
                }
                if (orderStatusInterval) {
                    clearInterval(orderStatusInterval);
                    orderStatusInterval = null;
                }

                currentUser = null;
                currentOrder = null;
                currentOrderData = null;
                developerKey = null;

                showLogin();

            } catch (error) {
                console.error('Logout failed:', error);
            }
        }

        // App initialization
        async function showApp(user) {
            currentUser = user;

            hideElement('loginScreen');
            showElement('appScreen');
            document.getElementById('userEmail').textContent = user.email;

            // Pre-fill customer name from email
            const customerNameField = document.getElementById('customerName');
            if (customerNameField && user.email) {
                const emailUsername = user.email.split('@')[0];
                const suggestedName = emailUsername.replace(/[._]/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                customerNameField.value = suggestedName;
            }

            // Get developer key for API access
            await getDeveloperKey();

            // Fetch queue configuration
            await fetchQueueConfig();

            // Connect WebSocket
            connectWebSocket();

            console.log('App initialized for:', user.email);
        }

        function showLogin() {
            hideElement('appScreen');
            showElement('loginScreen');

            // Clear form
            document.getElementById('email').value = '';
            document.getElementById('password').value = '';
        }

        // Get developer key for API access
        async function getDeveloperKey() {
            try {
                console.log('Getting developer key from:', API_BASE);

                const response = await fetch(`${API_BASE}/api/auth/developer/login`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        username: 'developer',
                        password: 'dev123'
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const data = await response.json();

                if (data.developer_key) {
                    developerKey = data.developer_key;
                    console.log('Developer key obtained');
                } else {
                    throw new Error(data.error || 'No developer key in response');
                }
            } catch (error) {
                console.error('Developer key error:', error);
                showAlert('Failed to get API access. Please contact administrator.', 'error');
            }
        }

        // Fetch queue configuration
        async function fetchQueueConfig() {
            try {
                if (!developerKey) return;

                const response = await fetch(`${API_BASE}/api/v1/queue/list?admin=true`, {
                    headers: { 'X-API-Key': developerKey }
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.queue_mode) {
                        queueMode = data.queue_mode;
                        queueConfig = data.config || {};
                        updateQueueModeDisplay();
                    }
                }
            } catch (error) {
                console.error('Failed to fetch queue config:', error);
            }
        }

        function updateQueueModeDisplay() {
            const queueModeElement = document.getElementById('queueMode');
            const queueModeTextElement = document.getElementById('queueModeText');

            if (queueModeElement && queueModeTextElement) {
                queueModeElement.className = 'queue-mode';

                switch (queueMode) {
                    case 'fifo':
                        queueModeElement.classList.add('fifo');
                        queueModeTextElement.textContent = 'FIFO Mode (First In, First Out)';
                        break;
                    case 'super_qup':
                        queueModeElement.classList.add('super_qup');
                        queueModeTextElement.textContent = 'Super QUP Mode (Pool Time System)';
                        break;
                    case 'negotiation':
                        queueModeElement.classList.add('negotiation');
                        queueModeTextElement.textContent = 'Negotiation Mode (Voluntary Swapping)';
                        break;
                    case 'chaos':
                        queueModeElement.classList.add('chaos');
                        queueModeTextElement.textContent = 'Chaos Mode (Free Movement)';
                        break;
                    default:
                        queueModeTextElement.textContent = 'Queue Mode: ' + queueMode;
                }
            }
        }

        // WebSocket connection
        function connectWebSocket() {
            try {
                console.log('Connecting to WebSocket at:', API_BASE);

                // Check if Socket.IO library is loaded
                if (typeof io === 'undefined') {
                    throw new Error('Socket.IO library not loaded. Please check the CDN or network connection.');
                }

                socket = io(API_BASE, {
                    transports: ['websocket', 'polling'],
                    timeout: 20000,
                    reconnection: true,
                    reconnectionDelay: 2000,
                    reconnectionAttempts: 5,
                    forceNew: true
                });

                socket.on('connect', () => {
                    updateConnectionStatus(true);
                    console.log('WebSocket connected to:', API_BASE);

                    // Subscribe to order updates for this order
                    if (currentOrder) {
                        socket.emit('subscribe', { orderId: currentOrder });
                        console.log('Subscribed to order updates for:', currentOrder);
                    }
                });

                socket.on('disconnect', () => {
                    updateConnectionStatus(false);
                    console.log('WebSocket disconnected');
                });

                socket.on('connect_error', (error) => {
                    console.error('WebSocket connection error:', error);
                    updateConnectionStatus(false);
                });

                socket.on('order_update', (data) => {
                    console.log('Order update received:', data);
                    handleOrderUpdate(data);
                });

                socket.on('subscribed_order_update', (data) => {
                    console.log('Subscribed order update:', data);
                    handleOrderUpdate(data);
                });

                socket.on('queue_update', (data) => {
                    console.log('Queue update received:', data);
                    // Check if our order status changed
                    if (currentOrder && data.queue) {
                        const myOrder = data.queue.find(order => order.id === currentOrder);
                        if (myOrder) {
                            handleMyOrderUpdate(myOrder);
                        }
                    }
                });

                socket.on('error', (error) => {
                    console.error('WebSocket error:', error);
                });

            } catch (error) {
                console.error('WebSocket connection failed:', error);
                updateConnectionStatus(false);
                showAlert('Failed to connect to WebSocket service. Please check your connection.', 'error');
            }
        }

        function updateConnectionStatus(connected) {
            const status = document.getElementById('connectionStatus');
            if (connected) {
                status.className = 'connection-status connected';
                status.innerHTML = '<div class="connection-dot"></div><span>Connected</span>';
            } else {
                status.className = 'connection-status disconnected';
                status.innerHTML = '<div class="connection-dot"></div><span>Disconnected</span>';
            }
        }

        // Order management
        async function placeOrder() {
            const customerName = document.getElementById('customerName').value.trim();
            const description = document.getElementById('orderDescription').value.trim();

            if (!customerName) {
                showAlert('Please enter your name', 'error');
                return;
            }

            if (!description) {
                showAlert('Please enter your order description', 'error');
                return;
            }

            if (!developerKey) {
                showAlert('API not ready. Please try again.', 'error');
                return;
            }

            setLoading('order', true);

            try {
                // FIXED: Create order ID that matches the expected format
                const orderId = `${currentUser.email.replace('@', '_').replace('.', '_')}_${Date.now()}`;

                const orderPayload = {
                    order: description,
                    customer_email: currentUser.email,
                    customer_name: customerName,
                    items: [{ name: description, quantity: 1 }]
                };

                const response = await fetch(`${API_BASE}/api/v1/queue/add`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': developerKey
                    },
                    body: JSON.stringify({
                        id: orderId,
                        payload: orderPayload,
                        user_id: currentUser.email,
                        priority: 500
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    // FIXED: Store ORDER ID, not user email
                    currentOrder = orderId;
                    console.log('Order placed with Order ID:', currentOrder);

                    // Subscribe to order updates using ORDER ID
                    if (socket && socket.connected) {
                        socket.emit('subscribe', { orderId: orderId });
                        console.log('Subscribed to order updates for Order ID:', orderId);
                    }

                    // Show order status
                    showOrderStatus(customerName, description, data);
                    hideElement('orderForm');

                    // Start periodic order status checking
                    startOrderStatusPolling();

                    console.log('Order placed successfully:', orderId);
                    showAlert('Order placed successfully!', 'success');

                } else {
                    throw new Error(data.error || 'Failed to place order');
                }

            } catch (error) {
                console.error('Order failed:', error);
                showAlert('Order failed: ' + error.message, 'error');
            } finally {
                setLoading('order', false);
            }
        }

        function showOrderStatus(customerName, description, orderData) {
            document.getElementById('orderCustomerName').textContent = customerName;
            document.getElementById('orderDetails').textContent = description;
            document.getElementById('orderIdDisplay').textContent = currentOrder;
            document.getElementById('orderCurrentStatus').textContent = 'Waiting in queue';
            document.getElementById('orderPosition').textContent = orderData.position || '?';

            // Update debug info
            updateDebugInfo();

            // Set initial estimated completion time only once here
            if (orderData.estimated_time && !estimatedCompletionTime) {
                estimatedCompletionTime = new Date(Date.now() + (orderData.estimated_time * 1000));
                startWaitTimeCountdown();
            }

            showElement('orderStatus');
        }

        function updateDebugInfo() {
            document.getElementById('debugOrderId').textContent = currentOrder || 'none';
            document.getElementById('debugUserId').textContent = currentUser?.email || 'none';
        }

        function startWaitTimeCountdown() {
            // Clear any existing countdown to prevent multiple timers
            if (waitTimeInterval) {
                clearInterval(waitTimeInterval);
                waitTimeInterval = null;
            }

            // Only start countdown if we have a valid estimated completion time
            if (!estimatedCompletionTime) return;

            waitTimeInterval = setInterval(() => {
                if (!estimatedCompletionTime) {
                    clearInterval(waitTimeInterval);
                    waitTimeInterval = null;
                    return;
                }

                const now = new Date();
                const timeLeft = estimatedCompletionTime - now;

                if (timeLeft <= 0) {
                    document.getElementById('orderWaitTime').textContent = 'Any moment now...';
                    clearInterval(waitTimeInterval);
                    waitTimeInterval = null;
                } else {
                    const minutes = Math.floor(timeLeft / (1000 * 60));
                    const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                    document.getElementById('orderWaitTime').textContent = `${minutes}m ${seconds}s`;
                }
            }, 1000);
        }

        // Periodic order status polling
        function startOrderStatusPolling() {
            if (orderStatusInterval) {
                clearInterval(orderStatusInterval);
            }

            orderStatusInterval = setInterval(async () => {
                if (!currentOrder || !developerKey) return;

                try {
                    console.log('Polling order status for Order ID:', currentOrder);
                    const response = await fetch(`${API_BASE}/api/v1/queue/list?admin=true`, {
                        headers: { 'X-API-Key': developerKey }
                    });

                    const data = await response.json();

                    if (response.ok && data.queue) {
                        // FIXED: Find order by ORDER ID, not user email
                        const myOrder = data.queue.find(order => order.id === currentOrder);
                        if (myOrder) {
                            console.log('Found my order in polling:', {
                                id: myOrder.id,
                                position: myOrder.position,
                                qup_time_available: myOrder.qup_time_available,
                                pool_time_available: myOrder.pool_time_available,
                                available_pool_time: myOrder.available_pool_time,
                                can_qup: myOrder.can_qup
                            });
                            
                            // FIXED: Extract pool time from API response enhanced_time_management
                            if (data.enhanced_time_management && data.enhanced_time_management.available_pool_time !== undefined) {
                                myOrder.qup_time_available = data.enhanced_time_management.available_pool_time;
                                myOrder.can_qup = data.enhanced_time_management.available_pool_time > 0 && myOrder.position > 0;
                                console.log('FIXED: Set pool time from enhanced_time_management:', {
                                    available_pool_time: data.enhanced_time_management.available_pool_time,
                                    can_qup: myOrder.can_qup
                                });
                            }
                            
                            handleMyOrderUpdate(myOrder);
                            updateQUPControls(myOrder, data.queue);
                        } else {
                            console.log('Order not found in queue - order completed');
                            clearInterval(orderStatusInterval);
                            orderStatusInterval = null;
                            showOrderComplete();
                        }
                    }
                } catch (error) {
                    console.error('Failed to poll order status:', error);
                }
            }, 3000);
        }

        function updateQUPControls(myOrder, fullQueue) {
            currentOrderData = myOrder;

            // Show QUP controls if order is not finalized and not at front
            if (myOrder.finalized || myOrder.position <= 0) {
                hideElement('qupControls');
                return;
            }

            // Check if in Super QUP mode
            if (queueMode === 'super_qup') {
                showElement('qupControls');
                
                // Get pool time from multiple possible sources (prioritize the extracted value)
                let poolTime = 0;
                if (myOrder.qup_time_available !== undefined && myOrder.qup_time_available !== null) {
                    poolTime = myOrder.qup_time_available;
                } else if (myOrder.pool_time_available !== undefined) {
                    poolTime = myOrder.pool_time_available;
                } else if (myOrder.available_pool_time !== undefined) {
                    poolTime = myOrder.available_pool_time;
                }
                
                console.log('Pool time sources:', {
                    qup_time_available: myOrder.qup_time_available,
                    pool_time_available: myOrder.pool_time_available,
                    available_pool_time: myOrder.available_pool_time,
                    final_pool_time: poolTime,
                    can_qup_from_order: myOrder.can_qup
                });
                
                // Update pool time display
                document.getElementById('poolTimeDisplay').textContent = Math.floor(poolTime || 0);
                
                // Determine if QUP is available - use the extracted can_qup flag or calculate
                const canQup = myOrder.can_qup !== undefined ? myOrder.can_qup : (poolTime > 0 && myOrder.position > 0);
                
                // Update debug info
                document.getElementById('debugCanQup').textContent = canQup ? 'Yes' : 'No';
                document.getElementById('debugPoolTime').textContent = Math.floor(poolTime || 0) + 's';
                
                // Enable/disable buttons based on actual QUP availability
                const plusBtn = document.getElementById('qupPlusBtn');
                const minusBtn = document.getElementById('qupMinusBtn');
                const maxBtn = document.getElementById('qupMaxBtn');

                // Plus button: can move up if canQup is true
                plusBtn.disabled = !canQup;
                
                // Max button: can jump to max position if canQup is true
                maxBtn.disabled = !canQup;
                
                // Minus button: can move down if previously moved up
                minusBtn.disabled = !myOrder.can_move_down;
                
                console.log('QUP Buttons state:', {
                    canQup: canQup,
                    poolTime: poolTime,
                    position: myOrder.position,
                    plusDisabled: plusBtn.disabled,
                    maxDisabled: maxBtn.disabled,
                    minusDisabled: minusBtn.disabled
                });
                
            } else {
                hideElement('qupControls');
            }
        }

        function handleOrderUpdate(data) {
            if (!currentOrder || data.orderId !== currentOrder) return;

            console.log('Handling order update for my order:', data.action);

            switch (data.action) {
                case 'finalized':
                case 'pickup_ready':
                    if (document.getElementById('pickupSection').classList.contains('hidden')) {
                        checkForPickupCode();
                    }
                    break;

                case 'completed':
                    showOrderComplete();
                    break;

                case 'cancelled':
                    showAlert('Your order has been cancelled', 'error');
                    startNewOrder();
                    break;

                case 'position_changed':
                    if (data.details && data.details.new_position !== undefined) {
                        document.getElementById('orderPosition').textContent = data.details.new_position + 1;
                    }
                    break;
            }
        }

        function handleMyOrderUpdate(orderData) {
            console.log('My order data updated:', orderData);

            // Update position
            if (orderData.position !== undefined) {
                document.getElementById('orderPosition').textContent = orderData.position + 1;
            }

            // Update wait time - prioritize remaining_seconds from server
            if (orderData.remaining_seconds && orderData.remaining_seconds > 0) {
                const minutes = Math.floor(orderData.remaining_seconds / 60);
                const seconds = orderData.remaining_seconds % 60;
                document.getElementById('orderWaitTime').textContent = `${minutes}m ${seconds}s`;
                
                // Update estimated completion time based on server data
                estimatedCompletionTime = new Date(Date.now() + (orderData.remaining_seconds * 1000));
                
                // Restart countdown with server time
                startWaitTimeCountdown();
            }

            if (orderData.finalized && orderData.pickup_code && orderData.pickup_code !== 'PENDING') {
                if (document.getElementById('pickupSection').classList.contains('hidden')) {
                    showPickupCode(orderData.pickup_code);
                }
            } else if (orderData.status === 'completed') {
                showOrderComplete();
            } else if (orderData.cancelled) {
                showAlert('Your order has been cancelled', 'error');
                startNewOrder();
            }
        }

        async function checkForPickupCode() {
            try {
                console.log('Checking for pickup code...');

                const response = await fetch(`${API_BASE}/api/v1/queue/list?admin=true`, {
                    headers: { 'X-API-Key': developerKey }
                });

                const data = await response.json();

                if (response.ok && data.queue) {
                    // FIXED: Find by ORDER ID
                    const myOrder = data.queue.find(order => order.id === currentOrder);
                    if (myOrder) {
                        console.log('Found my order:', myOrder);
                        if (myOrder.finalized && myOrder.pickup_code && myOrder.pickup_code !== 'PENDING') {
                            showPickupCode(myOrder.pickup_code);
                        } else if (myOrder.finalized) {
                            setTimeout(checkForPickupCode, 1000);
                        }
                    }
                } else {
                    console.error('Failed to get order details:', data.error);
                }
            } catch (error) {
                console.error('Failed to check pickup code:', error);
                setTimeout(checkForPickupCode, 2000);
            }
        }

        function showPickupCode(code) {
            document.getElementById('orderCurrentStatus').textContent = 'Ready for PiQUP';
            document.getElementById('pickupCode').textContent = code;

            hideElement('orderStatus');
            hideElement('qupControls');
            showElement('pickupSection');

            if (waitTimeInterval) {
                clearInterval(waitTimeInterval);
                waitTimeInterval = null;
            }

            if (!orderStatusInterval && currentOrder) {
                startOrderStatusPolling();
            }

            console.log('PiQUP code received:', code);
        }

        function showOrderComplete() {
            hideElement('orderStatus');
            hideElement('pickupSection');
            hideElement('qupControls');

            if (waitTimeInterval) {
                clearInterval(waitTimeInterval);
                waitTimeInterval = null;
            }
            if (orderStatusInterval) {
                clearInterval(orderStatusInterval);
                orderStatusInterval = null;
            }

            console.log('Order completed');
            showAlert('Order completed! Thank you for using QUP.', 'success');

            setTimeout(() => {
                startNewOrder();
            }, 1000);
        }

        function startNewOrder() {
            currentOrder = null;
            currentOrderData = null;
            estimatedCompletionTime = null;

            if (waitTimeInterval) {
                clearInterval(waitTimeInterval);
                waitTimeInterval = null;
            }
            if (orderStatusInterval) {
                clearInterval(orderStatusInterval);
                orderStatusInterval = null;
            }

            document.getElementById('orderDescription').value = '';
            hideElement('orderStatus');
            hideElement('pickupSection');
            hideElement('completeSection');
            hideElement('qupControls');
            showElement('orderForm');

            updateDebugInfo();

            console.log('Ready for new order');
        }

        // QUP Operations - FIXED TO USE ORDER ID
        async function performQUP(direction) {
            // Handle the original plus/minus button calls
            if (direction === 'plus') {
                return performQUPUp();
            } else if (direction === 'minus') {
                return performDownwardMovement();
            } else {
                // Direct QUP call
                return performQUPUp();
            }
        }

        async function performMaxQUP() {
            if (!currentOrder || !developerKey) {
                showAlert('No current order or API not ready', 'error');
                return;
            }

            try {
                console.log('FIXED Max QUP: Using Order ID:', currentOrder);

                // Try the command line tester approach first (direction: "max")
                let response = await fetch(`${API_BASE}/api/v1/queue/qup`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': developerKey
                    },
                    body: JSON.stringify({
                        user_id: currentOrder,  // FIXED: Use Order ID
                        qup_type: 'super',
                        direction: 'max'  // Use direction approach like command line tester
                    })
                });

                let data = await response.json();

                console.log('Max QUP Response (direction approach):', {
                    status: response.status,
                    message: data.message,
                    payload_sent: {
                        user_id: currentOrder,
                        qup_type: 'super',
                        direction: 'max'
                    }
                });

                // If direction approach doesn't work, try max_jump approach
                if (!response.ok && data.error && data.error.includes('direction')) {
                    console.log('Trying max_jump approach...');
                    response = await fetch(`${API_BASE}/api/v1/queue/qup`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-API-Key': developerKey
                        },
                        body: JSON.stringify({
                            user_id: currentOrder,  // FIXED: Use Order ID
                            qup_type: 'super',
                            max_jump: true  // Alternative approach
                        })
                    });

                    data = await response.json();
                    console.log('Max QUP Response (max_jump approach):', {
                        status: response.status,
                        message: data.message
                    });
                }

                if (response.ok) {
                    showAlert(`Max QUP successful! ${data.message}`, 'success');
                    console.log('Max QUP success with Order ID:', currentOrder);
                } else {
                    showAlert(`Max QUP failed: ${data.error}`, 'error');
                    console.log('Max QUP failed:', data.error);
                }

            } catch (error) {
                console.error('Max QUP failed:', error);
                showAlert('Max QUP operation failed', 'error');
            }
        }

        async function performDownwardMovement() {
            if (!currentOrder || !developerKey) {
                showAlert('No current order or API not ready', 'error');
                return;
            }

            try {
                console.log('FIXED Downward Movement: Using Order ID:', currentOrder);

                const response = await fetch(`${API_BASE}/api/v1/queue/move-down`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': developerKey
                    },
                    body: JSON.stringify({
                        user_id: currentOrder  // FIXED: Use Order ID
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(`Downward movement successful! ${data.message}`, 'success');
                    console.log('Downward movement success with Order ID:', currentOrder);
                } else {
                    showAlert(`Downward movement failed: ${data.error}`, 'error');
                    console.log('Downward movement failed:', data.error);
                }

            } catch (error) {
                console.error('Downward movement failed:', error);
                showAlert('Downward movement operation failed', 'error');
            }
        }

        // Utility functions
        function showElement(id) {
            document.getElementById(id).classList.remove('hidden');
        }

        function hideElement(id) {
            document.getElementById(id).classList.add('hidden');
        }

        function setLoading(type, loading) {
            if (type === 'login') {
                const text = document.getElementById('loginText');
                const spinner = document.getElementById('loginLoading');

                if (loading) {
                    text.style.display = 'none';
                    spinner.classList.remove('hidden');
                } else {
                    text.style.display = 'inline';
                    spinner.classList.add('hidden');
                }
            } else if (type === 'order') {
                const text = document.getElementById('orderButtonText');
                const spinner = document.getElementById('orderLoading');
                const button = text.parentElement;

                if (loading) {
                    text.style.display = 'none';
                    spinner.classList.remove('hidden');
                    button.disabled = true;
                } else {
                    text.style.display = 'inline';
                    spinner.classList.add('hidden');
                    button.disabled = false;
                }
            }
        }

        function showAlert(message, type = 'info') {
            const alertsContainer = document.getElementById('alerts');

            const existingAlerts = alertsContainer.querySelectorAll('.alert');
            existingAlerts.forEach(alert => {
                if (alert.textContent === message) {
                    alert.remove();
                }
            });

            const alert = document.createElement('div');
            alert.className = `alert alert-${type} fade-in`;
            alert.textContent = message;

            alertsContainer.appendChild(alert);

            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }

        // Handle Enter key in form fields
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('email').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    document.getElementById('password').focus();
                }
            });

            document.getElementById('password').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleLogin();
                }
            });

            document.getElementById('customerName').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    document.getElementById('orderDescription').focus();
                }
            });

            document.getElementById('orderDescription').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    placeOrder();
                }
            });
        });

        // Flash screen effect when clicking PiQUP code
        function flashScreen() {
            const flashDiv = document.createElement('div');
            flashDiv.className = 'screen-flash';
            flashDiv.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(16, 185, 129, 0.9);
                z-index: 9999;
                opacity: 0;
                pointer-events: none;
                animation: flashEffect 0.8s ease-in-out;
            `;
            
            document.body.appendChild(flashDiv);

            setTimeout(() => {
                if (document.body.contains(flashDiv)) {
                    document.body.removeChild(flashDiv);
                }
            }, 800);

            console.log('PiQUP code flashed!');
        }

        // Additional utility functions that may have been missing
        function perfoMaxQUP() {
            // Alias for performMaxQUP to match original onclick handlers
            return performMaxQUP();
        }

        async function performQUPUp() {
            if (!currentOrder || !developerKey) {
                showAlert('No current order or API not ready', 'error');
                return;
            }

            try {
                console.log('FIXED QUP UP: Using Order ID:', currentOrder);

                const response = await fetch(`${API_BASE}/api/v1/queue/qup`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-Key': developerKey
                    },
                    body: JSON.stringify({
                        user_id: currentOrder,  // FIXED: Use Order ID instead of user email
                        qup_type: 'super',
                        direction: 'plus'
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(`QUP successful! ${data.message}`, 'success');
                    console.log('QUP success with Order ID:', currentOrder);
                } else {
                    showAlert(`QUP failed: ${data.error}`, 'error');
                    console.log('QUP failed:', data.error);
                }

            } catch (error) {
                console.error('QUP failed:', error);
                showAlert('QUP operation failed', 'error');
            }
        }

        // Test mode function (bypasses Supabase)
        function skipAuth() {
            console.log('Entering test mode (bypassing Supabase auth)');
            const testUser = {
                email: 'test@example.com',
                id: 'test-user-' + Date.now()
            };
            showApp(testUser);
        }

        // Add CSS for flash effect
        const style = document.createElement('style');
        style.textContent = `
            @keyframes flashEffect {
                0% { opacity: 0; }
                50% { opacity: 1; }
                100% { opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // Initialize the app
        init();

        // Make functions globally available (fix for onclick handlers)
        window.handleLogin = handleLogin;
        window.logout = logout;
        window.skipAuth = skipAuth;
        window.placeOrder = placeOrder;
        window.performQUP = performQUP;
        window.performMaxQUP = performMaxQUP;
        window.performDownwardMovement = performDownwardMovement;
        window.startNewOrder = startNewOrder;
        window.flashScreen = flashScreen;
        window.perfoMaxQUP = perfoMaxQUP; // For any typos in original HTML
        window.performQUPUp = performQUPUp;
    </script>
</body>
</html>
